<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="MyDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:windowNoTitle">true</item>

    </style>

    <style name="edit_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/dp_30</item>
        <item name="android:background">@drawable/shape_strike_themecolor_90</item>
        <item name="android:textColorHint">#bebebe</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--加载pressbar-->

    <!--普通长宽样式-->


    <style name="widthMatchParent">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>
